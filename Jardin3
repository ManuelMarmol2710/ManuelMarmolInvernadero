      return planta;		
  


 }

  public void setPlanta(String planta) {
	  
this.planta = planta;
  
  }
  public String getTamano() {
		part = new Scanner(System.in);     
	                  System.out.println("-Clasifique su planta por tamaño :");
					  System.out.println("Si es una Mata,Arbusto o Arbol: ");
					  tamano = part.next();
	                  return tamano;				  
	} 
					  
public void setTamano(String tamano) {
	
	this.tamano = tamano;
	
	}
	
	
